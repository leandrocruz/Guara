<?xml version="1.0" encoding="UTF-8" ?>

<root>
	<configuration key="br.com.ibnetwork.guara.pull.PullManager">
		<tools>
			<tool 	name="link" 		
					scope="request" 	
					className="br.com.ibnetwork.guara.pull.tools.LinkTool"/>
			<tool 	name="content"		
					scope="request" 		
					className="br.com.ibnetwork.guara.pull.tools.ContentTool"/>
			<tool 	name="templateTool"	
					scope="global"	
					className="br.com.ibnetwork.guara.pull.tools.TemplateTool"/>
			<tool 	name="referenceTool"	
					scope="global"	
					className="br.com.ibnetwork.guara.pull.tools.ReferenceTool"/>
			<tool 	name="beanTool"	
					scope="global"	
					className="br.com.ibnetwork.guara.app.xingu.pull.BeanTool"/>
			<tool 	name="repository"	
					scope="global"	
					className="br.com.ibnetwork.guara.app.xingu.pull.FileRepositoryTool"/>

			<!-- APP tools -->

		</tools>
	</configuration>

	<configuration key="br.com.ibnetwork.guara.app.xingu.pull.BeanTool">
		<packages>
			<package name="${groupId}"/>
		</packages>
	</configuration>
	
</root>
